<li>
    <a href="@Url.Action("About", "Home")">
        <span class="small-nav" data-toggle="tooltip" data-placement="right" title="About">
            <span class="fa fa-question-circle"></span>
        </span>
        <span class="full-nav"><span class="fa fa-question-circle"></span> About </span>
    </a>
</li>

<li>
    <a href="@Url.Action("Contact", "Home")">
        <span class="small-nav" data-toggle="tooltip" data-placement="right" title="Contact">
            <span class="glyphicon glyphicon-comment"></span>
        </span>
        <span class="full-nav"> <span class="glyphicon glyphicon-comment"></span> Contact </span>
    </a>
</li>

@if (Request.IsAuthenticated)
{
    <li>
        <a href="@Url.Action("Index", "Manage")">
            <span class="small-nav" data-toggle="tooltip" data-placement="right" title="My Account">
                <span class="fa fa-user"></span>
            </span>
            <span class="full-nav"> <span class="fa fa-user"></span> @User.Identity.GetUserName() </span>
        </a>
    </li>

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        {
            <li class="logoutForm">
                <a href="javascript:document.getElementById('logoutForm').submit()">
                    <span class="small-nav" data-toggle="tooltip" data-placement="right" title="Log-out">
                <span class="fa fa-sign-out"></span>
            </span>
                    <span class="full-nav"> <span class="fa fa-sign-out"></span> Sign-out </span>
                </a>
            </li>
        }
    }
}
else
{
    <li>
        <a href="@Url.Action("Login", "Account")">
            <span class="small-nav" data-toggle="tooltip" data-placement="right" title="Log-in">
                <span class="fa fa-sign-in"></span>
            </span>
            <span class="full-nav"> <span class="fa fa-sign-in"></span> Log-in </span>
        </a>
    </li>
}

