@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li>
        <span class="small-nav" data-toggle="tooltip" data-placement="right" title="Search">
        <span class="glyphicon glyphicon-search"></span>
    </span>
        <div class="full-nav">

            @using (Html.BeginForm("SearchResults", "Show", FormMethod.Post))
            {
                <div class="paddindgSearch">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" name="search" id="search">
                        <div class="input-group-btn">
                            <button class="btn btn-purple" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </div>
            }


        </div>
    </li>
}

<li class="active">
    <a href="@Url.Action("Index", "Home")">
        <span class="small-nav" data-toggle="tooltip" data-placement="right" title="Home">
            <span class="glyphicon glyphicon-home"></span>
        </span>
        <span class="full-nav"> <span class="glyphicon glyphicon-home"></span> Home </span>
    </a>
</li>

@if (Request.IsAuthenticated)
{
    <li>
        <a href="@Url.Action("MyCalender", "Show")">
            <span class="small-nav" data-toggle="tooltip" data-placement="right" title="My Calender">
